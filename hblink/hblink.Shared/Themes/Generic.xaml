<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:controls="using:hblink.Shared.Controls">
    
    <Style TargetType="controls:Duotone">
        <Setter Property="FontFamily"
                Value="ms-appx:///Assets/Fonts/FontAwesome.otf#Font Awesome 5 Duotone" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:Duotone">
                    <Grid>
                        <TextBlock FontSize="{TemplateBinding FontSize}"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   Foreground="{TemplateBinding Foreground}"
                                   FontWeight="Black"
                                   Text="{TemplateBinding Primary}" />
                        <TextBlock FontSize="{TemplateBinding FontSize}"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   Foreground="{TemplateBinding Foreground}"
                                   FontWeight="Black"
                                   Text="{TemplateBinding Secondary}"
                                   Opacity="0.5"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
